# Use Changes.app for git diffs (nice when diffing single files and folders)
function gitdiff {
  [ $# -eq 7 ] && /usr/bin/env chdiff --wait "$2" "$5"
}

function giff {
  export GIT_EXTERNAL_DIFF="gitdiff"
  git diff "$1"
  export -n GIT_EXTERNAL_DIFF
}

